<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/common_white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_aibum_menuitme"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/common_album_imgbg" />

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="90dp"
		    android:layout_centerVertical="true"
		    android:layout_toLeftOf="@+id/cb_album_imgsitem"
		    android:layout_toRightOf="@id/iv_aibum_menuitme"
		    android:gravity="center_vertical"
		    android:orientation="vertical" >

		    <TextView
		        android:id="@+id/tv_aibum_menuitme_name"
            android:paddingLeft="20dp"
            android:paddingStart="20dp" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/common_grey_text"
            android:text="我的相册" />
		    <TextView
		        android:id="@+id/tv_aibum_menuitme_num"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/common_grey_light_txt"
            android:text="25张" />
		</LinearLayout>

	 <CheckBox
	     android:layout_marginRight="10dp"
	     android:id="@+id/cb_aibum_menuitme"
	     style="@style/common_checkBox"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignParentRight="true"
	     android:layout_centerVertical="true"
	     android:checked="false"
	     android:clickable="false"
	     android:focusable="false" />

    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_grey_back"
        />

</LinearLayout>
