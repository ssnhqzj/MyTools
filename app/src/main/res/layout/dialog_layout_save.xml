<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="100dp"
              android:background="@color/common_backcolor"
              android:paddingBottom="10dp"
                >
    <TextView
        android:layout_weight="1"
        android:background="@color/u_common_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="保存中..."
        android:textColor="@color/common_white"
        android:textSize="20dp"
        android:id="@+id/dialog_save_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_save_progressBar"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:singleLine="true"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0221102.jpg"
                android:id="@+id/dialog_save_name"
                />
            <TextView
                android:gravity="right"
                android:layout_weight="6"
                android:singleLine="true"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/2"
                android:id="@+id/dialog_save_position"
                />

    </LinearLayout>

  </LinearLayout>


</LinearLayout>