<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
      android:background="@color/common_white"
      android:padding="0dp"
     >

    <ImageView
        android:id="@+id/iv_album_imgsitem"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/common_album_imgbg" />
<LinearLayout 
    	android:id="@+id/ll_album_cb"
   		android:padding="10dp"
   		android:gravity="center"
      	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_album_imgsitem"
        android:layout_alignLeft="@id/iv_album_imgsitem"
    >

    <CheckBox
        android:id="@+id/cb_album_imgsitem"
        style="@style/common_checkBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center" />

</LinearLayout>
   

</RelativeLayout>
